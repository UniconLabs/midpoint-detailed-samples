          oid="7a5f0e07-6593-4776-9799-df89ecef3a02">
    <name>Grouper Outbound Subject Registry Resource</name>
    <description>Provisions users to Grouper using the Grouper Subject Source database via the Script SQL Connector.</description>
    <connectorRef relation="org:default" type="c:ConnectorType">
        <!-- ConnId com.evolveum.polygon.connector.scripted.sql.ScriptedSQLConnector v2.1 -->
        <description>
                ConnId com.evolveum.polygon.connector.scripted.sql.ScriptedSQLConnector v2.1
            </description>
        <filter>
            <q:equal>
                <q:path xmlns:c="http://midpoint.evolveum.com/xml/ns/public/common/common-3">c:connectorType</q:path>
                <q:value>com.evolveum.polygon.connector.scripted.sql.ScriptedSQLConnector</q:value>
            </q:equal>
        </filter>
    </connectorRef>
    <connectorConfiguration xmlns:icfc="http://midpoint.evolveum.com/xml/ns/public/connector/icf-1/connector-schema-3">
        <icfc:resultsHandlerConfiguration>
            <icfc:enableNormalizingResultsHandler>false</icfc:enableNormalizingResultsHandler>
            <icfc:enableFilteredResultsHandler>false</icfc:enableFilteredResultsHandler>
            <icfc:enableAttributesToGetSearchResultsHandler>false</icfc:enableAttributesToGetSearchResultsHandler>
        </icfc:resultsHandlerConfiguration>
        <icfc:configurationProperties xmlns:gen947="http://midpoint.evolveum.com/xml/ns/public/connector/icf-1/bundle/com.evolveum.polygon.connector-scripted-sql/com.evolveum.polygon.connector.scripted.sql.ScriptedSQLConnector">
            <gen947:createScriptFileName>/opt/midpoint/var/sql/grouper_subject_registry/CreateScript.groovy</gen947:createScriptFileName>
            <gen947:deleteScriptFileName>/opt/midpoint/var/sql/grouper_subject_registry/DeleteScript.groovy</gen947:deleteScriptFileName>
            <gen947:scriptRoots>null</gen947:scriptRoots>
            <gen947:searchScriptFileName>/opt/midpoint/var/sql/grouper_subject_registry/SearchScript.groovy</gen947:searchScriptFileName>
            <gen947:updateScriptFileName>/opt/midpoint/var/sql/grouper_subject_registry/UpdateScript.groovy</gen947:updateScriptFileName>
            <gen947:classpath>null</gen947:classpath>
            <gen947:schemaScriptFileName>/opt/midpoint/var/sql/grouper_subject_registry/SchemaScript.groovy</gen947:schemaScriptFileName>
            <gen947:testScriptFileName>/opt/midpoint/var/sql/grouper_subject_registry/TestScript.groovy</gen947:testScriptFileName>
            <gen947:syncScriptFileName>/opt/midpoint/var/sql/grouper_subject_registry/SyncScript.groovy</gen947:syncScriptFileName>
            <gen947:user>subject</gen947:user>
            <gen947:password>subject</gen947:password>
            <gen947:jdbcDriver>org.postgresql.Driver</gen947:jdbcDriver>
            <gen947:jdbcUrlTemplate>jdbc:postgresql://database:5432/grouper_table_here</gen947:jdbcUrlTemplate>
        </icfc:configurationProperties>
    </connectorConfiguration>
    <schema>
    </schema>
    <schemaHandling>
        <objectType id="2">
            <kind>account</kind>
            <default>true</default>
            <objectClass>ri:AccountObjectClass</objectClass>
            <attribute id="6">
                <c:ref xmlns:icfs="http://midpoint.evolveum.com/xml/ns/public/connector/icf-1/resource-schema-3">icfs:name</c:ref>
                <tolerant>true</tolerant>
                <exclusiveStrong>false</exclusiveStrong>
                <outbound>
                    <authoritative>true</authoritative>
                    <exclusive>false</exclusive>
                    <strength>normal</strength>
                    <source>
                        <c:path>extension/grouperId</c:path>
                    </source>
                    <expression>
                        <script xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:c="http://midpoint.evolveum.com/xml/ns/public/common/common-3" xsi:type="c:ScriptExpressionEvaluatorType">
                            <code>
                              if (grouperId?.trim()) {
                                  return grouperId //if a value is set, use it
                              }
                              return "GR-P-" + iterationToken //otherwise generate new id
                            </code>
                        </script>
                    </expression>
                </outbound>
                <inbound id="7">
                    <authoritative>true</authoritative>
                    <exclusive>false</exclusive>
                    <strength>strong</strength>
                    <target>
                        <c:path>extension/grouperId</c:path>
                    </target>
                </inbound>
                <inbound>
                    <strength>strong</strength>
                    <expression>
                        <assignmentTargetSearch>
                            <targetType>RoleType</targetType>
                            <oid>76f8b44f-4d8e-4d82-b2a5-6f24637ae352</oid> <!--  role-grouper-subject -->
                            <assignmentProperties>
                                <subtype>grouper-subject</subtype>
                            </assignmentProperties>
                        </assignmentTargetSearch>
                    </expression>
                    <target>
                        <path>assignment</path>
                        <set>
                            <condition>
                                <script>
                                    <code>
                                        assignment.subtype.contains('grouper-subject')
                                    </code>
                                </script>
                            </condition>
                        </set>
                    </target>
                </inbound>
            </attribute>
            <attribute id="9">
                <c:ref xmlns:ri="http://midpoint.evolveum.com/xml/ns/public/resource/instance-3">ri:firstname</c:ref>
                <tolerant>true</tolerant>
                <exclusiveStrong>false</exclusiveStrong>
                <outbound>
                    <authoritative>true</authoritative>
                    <exclusive>false</exclusive>
                    <strength>normal</strength>
                    <source>
                        <c:path>givenName</c:path>
                    </source>
                </outbound>
                <inbound id="12">
                    <authoritative>true</authoritative>
                    <exclusive>false</exclusive>
                    <strength>normal</strength>
                    <target>
                        <c:path>givenName</c:path>
                    </target>
                </inbound>
            </attribute>
            <attribute id="10">
                <c:ref xmlns:ri="http://midpoint.evolveum.com/xml/ns/public/resource/instance-3">ri:lastname</c:ref>
                <tolerant>true</tolerant>
                <exclusiveStrong>false</exclusiveStrong>
                <outbound>
                    <authoritative>true</authoritative>
                    <exclusive>false</exclusive>
                    <strength>normal</strength>
                    <source>
                        <c:path>familyName</c:path>
                    </source>
                </outbound>
                <inbound id="13">
                    <authoritative>true</authoritative>
                    <exclusive>false</exclusive>
                    <strength>normal</strength>
                    <target>
                        <c:path>familyName</c:path>
                    </target>
                </inbound>
            </attribute>
            <attribute id="11">
                <c:ref xmlns:ri="http://midpoint.evolveum.com/xml/ns/public/resource/instance-3">ri:email</c:ref>
                <tolerant>true</tolerant>
                <exclusiveStrong>false</exclusiveStrong>
                <outbound>
                    <authoritative>true</authoritative>
                    <exclusive>false</exclusive>
                    <strength>normal</strength>
                    <source>
                        <c:path>emailAddress</c:path>
                    </source>
                </outbound>
                <inbound id="14">
                    <authoritative>true</authoritative>
                    <exclusive>false</exclusive>
                    <strength>normal</strength>
                    <target>
                        <c:path>emailAddress</c:path>
                    </target>
                </inbound>
            </attribute>
            <attribute id="16">
                <c:ref xmlns:ri="http://midpoint.evolveum.com/xml/ns/public/resource/instance-3">ri:loginid</c:ref>
                <tolerant>true</tolerant>
                <exclusiveStrong>false</exclusiveStrong>
                <outbound>
                    <authoritative>true</authoritative>
                    <exclusive>false</exclusive>
                    <strength>normal</strength>
                    <source>
                        <c:path>name</c:path>
                    </source>
                </outbound>
                <inbound id="18">
                    <authoritative>true</authoritative>
                    <exclusive>false</exclusive>
                    <strength>normal</strength>
                    <target>
                        <c:path>name</c:path>
                    </target>
                </inbound>
            </attribute>
            <attribute id="17">
                <c:ref xmlns:ri="http://midpoint.evolveum.com/xml/ns/public/resource/instance-3">ri:description</c:ref>
                <tolerant>true</tolerant>
                <exclusiveStrong>false</exclusiveStrong>
                <outbound>
                    <authoritative>true</authoritative>
                    <exclusive>false</exclusive>
                    <strength>normal</strength>
                    <source>
                        <c:path>description</c:path>
                    </source>
                </outbound>
                <inbound id="19">
                    <authoritative>true</authoritative>
                    <exclusive>false</exclusive>
                    <strength>normal</strength>
                    <target>
                        <c:path>description</c:path>
                    </target>
                </inbound>
            </attribute>
            <attribute id="32">
                <c:ref xmlns:ri="http://midpoint.evolveum.com/xml/ns/public/resource/instance-3">ri:exampleid</c:ref>
                <tolerant>true</tolerant>
                <exclusiveStrong>false</exclusiveStrong>
                <outbound>
                    <authoritative>true</authoritative>
                    <exclusive>false</exclusive>
                    <strength>normal</strength>
                    <source>
                        <c:path>extension/exampleId</c:path>
                    </source>
                </outbound>
                <inbound id="33">
                    <authoritative>true</authoritative>
                    <exclusive>false</exclusive>
                    <strength>normal</strength>
                    <target>
                        <c:path>extension/exampleId</c:path>
                    </target>
                </inbound>
            </attribute>
            <iteration>
                <maxIterations>999999999</maxIterations>
                <tokenExpression>
                    <script xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:c="http://midpoint.evolveum.com/xml/ns/public/common/common-3" xsi:type="c:ScriptExpressionEvaluatorType">
                        <code>
                            return sprintf("%010d", iteration); //generates numeric portion of grouper subject id
                        </code>
                    </script>
                </tokenExpression>
            </iteration>
        </objectType>
    </schemaHandling>
