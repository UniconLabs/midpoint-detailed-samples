                    <name>InternalDesc</name>
                    <authoritative>true</authoritative>
                    <exclusive>false</exclusive>
                    <strength>normal</strength>
                    <source>
                        <path>$projection/attributes/EXTERNAL</path>
                    </source>
                    <expression>
                        <script>
                            <code>
                              def descrpt = ""
                              
                              if (user?.getDescription()?.trim()) {
                                 descrpt = user.getDescription() + " "
                              }
                                                 
                              if (input?.trim()?.equalsIgnoreCase("true") &amp;&amp; EXTERNAL?.trim()?.equalsIgnoreCase("true")) {
                                 if (!basic.containsIgnoreCase(descrpt, "external internal")) {
                                    return descrpt + "external internal"
                                 }
                              } else if (input?.trim()?.equalsIgnoreCase("true") &amp;&amp; EXTERNAL?.trim()?.equalsIgnoreCase("false")) {
                                 if (!basic.containsIgnoreCase(descrpt, "internal")) {
                                    return descrpt + "internal"
                                 }
                              } else if (input?.trim()?.equalsIgnoreCase("false") &amp;&amp; EXTERNAL?.trim()?.equalsIgnoreCase("true")) {
                                 if (!basic.containsIgnoreCase(descrpt, "external")) {
                                    return descrpt + "external"
                                 }
                              } else {
                                 //do nothing
                              }
           
                              
                              return descrpt
                              
                         </code>
                        </script>
                    </expression>
                    <target>
                        <path>description</path>
                    </target>
                </inbound>
